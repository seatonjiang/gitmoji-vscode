{
    "name": "gitmoji-vscode",
    "displayName": "Gitmoji",
    "description": "Gitmoji tool for git commit messages in VSCode",
    "version": "1.2.3",
    "author": {
        "name": "Seaton Jiang",
        "email": "hi@seatonjiang.com"
    },
    "publisher": "seatonjiang",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/seatonjiang/gitmoji-vscode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seatonjiang/gitmoji-vscode.git"
    },
    "homepage": "https://github.com/seatonjiang/gitmoji-vscode/blob/main/README.md",
    "engines": {
        "vscode": "^1.74.0"
    },
    "keywords": [
        "git",
        "emoji",
        "gitmoji",
        "commit",
        "messages"
    ],
    "categories": [
        "Other"
    ],
    "icon": "assets/icon.png",
    "activationEvents": [
        "onCommand:extension.showGitmoji"
    ],
    "main": "./out/extension.js",
    "l10n": "./languages",
    "contributes": {
        "commands": [
            {
                "command": "extension.showGitmoji",
                "title": "%gitmoji.command.showGitmoji.title%",
                "icon": "$(smiley)"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "when": "scmProvider == git",
                    "command": "extension.showGitmoji",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Gitmoji",
            "properties": {
                "gitmoji.addCustomEmoji": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "title": "A gitmoji entry",
                        "properties": {
                            "emoji": {
                                "type": "string"
                            },
                            "code": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        }
                    },
                    "description": "%gitmoji.config.addCustomEmoji%"
                },
                "gitmoji.outputType": {
                    "type": "string",
                    "default": "emoji",
                    "enum": [
                        "code",
                        "emoji"
                    ],
                    "enumDescriptions": [
                        "%gitmoji.config.outputType.code%",
                        "%gitmoji.config.outputType.emoji%"
                    ],
                    "description": "%gitmoji.config.outputType%"
                },
                "gitmoji.onlyUseCustomEmoji": {
                    "type": "boolean",
                    "default": false,
                    "description": "%gitmoji.config.onlyUseCustomEmoji%"
                },
                "gitmoji.showEmojiCode": {
                    "type": "boolean",
                    "default": false,
                    "description": "%gitmoji.config.showEmojiCode%"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.3.0",
        "@types/vscode": "^1.74.0",
        "@vscode/test-electron": "^2.3.3",
        "@vscode/l10n-dev": "^0.0.26",
        "@vscode/vsce": "^2.15.0",
        "glob": "^8.0.3",
        "mocha": "^10.2.0",
        "tslint": "^6.1.3",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@vscode/l10n": "^0.0.14"
    }
}
